<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyShop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".ShopActivity">

    <EditText
        android:id="@+id/FindGameTextBox"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="22dp"
        android:hint="Название игры"
        app:layout_constraintBottom_toTopOf="@+id/TakeGameButton"
        app:layout_constraintEnd_toStartOf="@+id/FindGameButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Price"
        android:layout_width="176dp"
        android:layout_height="46dp"
        android:layout_marginTop="426dp"
        android:background="#673AB7"
        android:foreground="#003700B3"
        android:text="Стоимость аренды"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age"
        android:layout_width="143dp"
        android:layout_height="43dp"
        android:layout_marginTop="478dp"
        android:background="#673AB7"
        android:foreground="#003700B3"
        android:text="Возраст"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NumPlayers"
        android:layout_width="143dp"
        android:layout_height="43dp"
        android:layout_marginTop="374dp"
        android:background="#673AB7"
        android:foreground="#003700B3"
        android:text="Кол-во игроков"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deposit"
        android:layout_width="175dp"
        android:layout_height="41dp"
        android:layout_marginTop="482dp"
        android:background="#673AB7"
        android:foreground="#003700B3"
        android:text="Залог"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="143dp"
        android:layout_height="43dp"
        android:layout_marginTop="426dp"
        android:background="#673AB7"
        android:foreground="#003700B3"
        android:text="Время"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GameName"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="#673AB7"
        android:ellipsize="none"
        android:foreground="#003700B3"
        android:text="Название"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/TakeGameButton"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Rules"
        android:layout_width="272dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="#673AB7"
        android:foreground="#003700B3"
        android:text="Правила"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GameDescription"
        android:text="Description"
        android:layout_width="0dp"
        android:layout_height="218dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:foreground="#003700B3"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ChooseLocation"
        android:layout_width="245dp"
        android:layout_height="31dp"
        android:layout_marginTop="586dp"
        android:background="@color/white"
        android:foreground="#003700B3"
        android:text="Выбрать место"
        android:textAllCaps="false"
        android:textColor="#3F51B5"
        android:textIsSelectable="false"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="183dp"
        android:layout_height="167dp"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/common_google_signin_btn_icon_light" />

    <Button
        android:id="@+id/button"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="306dp"
        android:layout_marginLeft="306dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="1dp"
        android:drawableLeft="@drawable/download"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/ChooseLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Deposit" />

    <Button
        android:id="@+id/FindGameButton"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="10dp"
        android:background="#F44336"
        android:foreground="#00CC0000"
        android:text="Найти"
        android:textColor="@color/white"
        app:backgroundTint="#F44336"
        app:elevation="2dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/FindGameTextBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FindGameTextBox" />

    <Button
        android:id="@+id/TakeGameButton"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="19dp"
        android:background="#F44336"
        android:foreground="#00CC0000"
        android:text="Беру"
        android:textColor="@color/white"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GameName"
        app:layout_constraintTop_toBottomOf="@+id/FindGameTextBox" />

    <Button
        android:id="@+id/Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="39dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <LinearLayout
        android:background="#E7E7E7"
        android:id="@+id/panel"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

    <ImageButton
        android:id="@+id/user7"
        android:layout_width="23dp"
        android:layout_height="40dp"
        android:layout_marginStart="330dp"
        android:layout_marginLeft="370dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="710dp"
        android:background="#E7E7E7"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/cartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="-330dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_baseline_shop_24" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
